# Grid Trading Bot - Production Environment Variables
# Copy this file to .env.production and fill in your values

# ===== BINANCE.US API CREDENTIALS =====
# Get these from: https://www.binance.us/en/usercenter/settings/api-management
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# ===== TRADING MODE =====
# Set to "true" for paper trading (simulated orders)
# Set to "false" for live trading (REAL MONEY!)
BINANCE_TEST_MODE=true

# ===== DATABASE (TiDB from Manus) =====
DATABASE_URL=your_tidb_connection_string_here

# ===== MANUS AUTHENTICATION =====
JWT_SECRET=your_jwt_secret_here
OAUTH_SERVER_URL=https://api.manus.im
VITE_APP_ID=your_app_id_here
VITE_OAUTH_PORTAL_URL=https://auth.manus.im
OWNER_OPEN_ID=your_owner_open_id_here
OWNER_NAME=your_name_here

# ===== MANUS BUILT-IN APIS =====
BUILT_IN_FORGE_API_URL=https://forge-api.manus.im
BUILT_IN_FORGE_API_KEY=your_forge_api_key_here
VITE_FRONTEND_FORGE_API_KEY=your_frontend_forge_key_here
VITE_FRONTEND_FORGE_API_URL=https://forge-api.manus.im

# ===== ANALYTICS =====
VITE_ANALYTICS_ENDPOINT=your_analytics_endpoint_here
VITE_ANALYTICS_WEBSITE_ID=your_website_id_here

# ===== APP CONFIGURATION =====
VITE_APP_TITLE=Grid Trading Bot
VITE_APP_LOGO=https://your-logo-url.com/logo.png
PORT=3000
NODE_ENV=production
